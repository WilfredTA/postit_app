<div class="well">
    <%= form_for @user do |f| %>
    <%= render 'shared/errors', object: @user %>
      <div class="control-group">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="control-group">
        <%= f.label :password%>
        <%= f.password_field :password %>
      </div>
      <%= f.submit logged_in? ? "Edit Profile" : "Sign up", class: 'btn btn-success' %>
    <% end %>
  </div>
